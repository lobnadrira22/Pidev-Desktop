<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="healthconnectjava.GUI.RegisterClientFXMLController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="400.0" prefWidth="262.0" style="-fx-background-color: #517ab5;" />
      <ImageView fitHeight="245.0" fitWidth="271.0" layoutX="1.0" layoutY="77.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../Images/logo-dark.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="email" layoutX="303.0" layoutY="231.0" prefHeight="26.0" prefWidth="247.0" promptText="Adresse e-mail" styleClass="textfield-design" stylesheets="@style.css" />
      <PasswordField fx:id="password" layoutX="303.0" layoutY="264.0" prefHeight="26.0" prefWidth="247.0" promptText="Mot de passe" styleClass="textfield-design" stylesheets="@style.css" />
      <Label layoutX="311.0" layoutY="28.0" text="Inscrivez-vous pour votre compte !" textFill="#1500ff">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Hyperlink fx:id="PLog" layoutX="349.0" layoutY="362.0" onAction="#PageLogin" text="Vous avez déjà un compte ?" />
      <Button fx:id="Binscrit" layoutX="373.0" layoutY="310.0" mnemonicParsing="false" onAction="#registerClient" styleClass="btn-save" stylesheets="@style.css" text="S'inscrire" />
      <TextField fx:id="dateN" layoutX="303.0" layoutY="198.0" prefHeight="26.0" prefWidth="247.0" promptText="Date de naissance" styleClass="textfield-design" stylesheets="@style.css" />
      <TextField fx:id="genre" layoutX="303.0" layoutY="166.0" prefHeight="26.0" prefWidth="247.0" promptText="Genre" styleClass="textfield-design" stylesheets="@style.css" />
      <TextField fx:id="prenom" layoutX="303.0" layoutY="134.0" prefHeight="26.0" prefWidth="247.0" promptText="Prénom" styleClass="textfield-design" stylesheets="@style.css" />
      <TextField fx:id="nom" layoutX="303.0" layoutY="101.0" prefHeight="26.0" prefWidth="247.0" promptText="Nom" styleClass="textfield-design" stylesheets="@style.css" />
   </children>
</AnchorPane>
